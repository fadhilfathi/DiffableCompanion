<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"/>
    <EditText
        android:id="@+id/ttl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tempat/TanggalLahir (lokasi/dd-mm-yy)"
        android:layout_below="@+id/nama"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        />
    <EditText
        android:id="@+id/nik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIK"
        android:layout_below="@+id/ttl"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/jeniskelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jenis Kelamin"
        android:layout_below="@+id/nik"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"/>
    <EditText
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat Lengkap"
        android:layout_below="@+id/jeniskelamin"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"/>
    <EditText
        android:id="@+id/pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pekerjaan"
        android:layout_below="@+id/alamat"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"/>
    <EditText
        android:id="@+id/nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Ponsel"
        android:layout_below="@+id/pekerjaan"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:inputType="number"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/nohp"
        android:weightSum="2">
    <RadioButton
        android:id="@+id/difabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difabel"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:checked="true"/>
    <RadioButton
        android:id="@+id/pendamping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendamping"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1" />
    </RadioGroup>
    <Button
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_below="@+id/radiogroup"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="8dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>